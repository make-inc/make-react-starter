{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "shared/**/*.ts"
  ],
  "exclude": [
    "client/**/*"
  ]
}